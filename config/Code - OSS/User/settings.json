{
	//! UI
	"workbench.iconTheme": "eq-material-theme-icons",
	"workbench.colorTheme": "Community Material Theme Darker",
	"workbench.colorCustomizations": {
		"tab.activeBorder": "#2979FF",
		"activityBarBadge.background": "#2979FF",
		"activityBar.activeBorder": "#2979FF",
		"list.activeSelectionForeground": "#2979FF",
		"list.inactiveSelectionForeground": "#2979FF",
		"list.highlightForeground": "#2979FF",
		"scrollbarSlider.activeBackground": "#2979FF50",
		"editorSuggestWidget.highlightForeground": "#2979FF",
		"textLink.foreground": "#2979FF",
		"progressBar.background": "#2979FF",
		"pickerGroup.foreground": "#2979FF",
		"notificationLink.foreground": "#2979FF",
		"editorWidget.resizeBorder": "#2979FF",
		"editorWidget.border": "#2979FF",
		"settings.modifiedItemIndicator": "#2979FF",
		"settings.headerForeground": "#2979FF",
		"panelTitle.activeBorder": "#2979FF",
		"breadcrumb.activeSelectionForeground": "#2979FF",
		"menu.selectionForeground": "#2979FF",
		"menubar.selectionForeground": "#2979FF",
		"editor.findMatchBorder": "#2979FF",
		"selection.background": "#2979FF40",
		"statusBarItem.remoteBackground": "#2979FF"
	},
	"editor.fontFamily": "JetBrains Mono, Fira Code, Ubuntu Mono, Hack",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.renderWhitespace": "boundary",
	"window.zoomLevel": 0,
	//? UI MINIMIZE
	"editor.folding": false,
	"editor.minimap.enabled": true,
	"editor.overviewRulerBorder": false,
	"editor.matchBrackets": "near",
	"editor.hideCursorInOverviewRuler": true,
	"editor.glyphMargin": false,
	"explorer.openEditors.visible": 0,
	// Removes the activity bar (the 4 icons at the left of the screen)
	"workbench.activityBar.visible": false,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.statusBar.visible": true,

	//! UX
	"editor.tabSize": 2,
	"zenMode.centerLayout": false,
	"zenMode.fullScreen": true,
	"debug.console.fontFamily": "Fira Code, Ubuntu Mono, Hack ",
	"debug.inlineValues": true,
	"debug.console.fontSize": 15,
	"window.menuBarVisibility": "toggle",
	"explorer.confirmDelete": false,
	"editor.autoIndent": "full",
	"editor.multiCursorModifier": "ctrlCmd",

	//! Extensions

	// Prettier //
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"prettier.printWidth": 160,
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 2,
	"prettier.semi": true,

	// Live Server
	"liveServer.settings.NoBrowser": true,
	"liveServer.settings.port": 7777,

	// jshint
	"jshint.lintHTML": true,
	"jshint.packageManager": "npm",
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

	// Better Comments
	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#E15554",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "?",
			"color": "#b3a4ed",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "//",
			"color": "#4D9DE0",
			"strikethrough": true,
			"backgroundColor": "transparent"
		},
		{
			"tag": "todo",
			"color": "#E1BC29",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "*",
			"color": "#3BB273",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "feature",
			"color": "#EAFFFD",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "idea",
			"color": "#06D6A0",
			"strikethrough": false,
			"backgroundColor": "transparent"
		}
	],

	// Brackets Pair Colorizer
	"bracketPairColorizer.highlightActiveScope": true,
	"bracketPairColorizer.showBracketsInGutter": true,
	"explorer.confirmDragAndDrop": false,
	"[sass]": {
		"editor.defaultFormatter": "syler.sass-indented"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"materialTheme.accent": "Blue"
}
